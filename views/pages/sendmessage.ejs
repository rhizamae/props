                                        <button type="submit" class="btn btn-default">Back</button>
                                        <button type="reset" class="btn btn-primary">Send</button>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
